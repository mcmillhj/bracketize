{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "globals": {
    "document": true,
    "it": true,
    "expect": true,
    "window": true,
    "describe": true,
    "beforeEach": true
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single"],
    "strict": 0,
    "no-undef": 1,
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used" }],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  },
  "plugins": ["react"]
}
